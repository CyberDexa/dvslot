{
  "name": "dvslot-web",
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build:web",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run web",
  "env": {
    "EXPO_PUBLIC_SUPABASE_URL": "@expo_public_supabase_url",
    "EXPO_PUBLIC_SUPABASE_ANON_KEY": "@expo_public_supabase_anon_key",
    "EXPO_PUBLIC_API_BASE_URL": "@expo_public_api_base_url",
    "EXPO_PUBLIC_WEB_URL": "@expo_public_web_url",
    "EXPO_PUBLIC_APP_NAME": "DVSlot",
    "EXPO_PUBLIC_APP_VERSION": "1.0.0",
    "EXPO_PUBLIC_ENVIRONMENT": "production"
  },
  "functions": {
    "app/**": {
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://dvslot-api.onrender.com https://api.postcodes.io https://www.gov.uk https://api.dvslot.com;"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
